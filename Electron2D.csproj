<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Build\Resources\Audio\SFX\testsfx.mp3" />
    <None Remove="Build\Resources\Shaders\FunShader.glsl" />
    <None Remove="Build\Resources\Textures\basicSpritesheet1.png" />
    <None Remove="Build\Resources\Textures\boid1.png" />
    <None Remove="Build\Resources\Textures\boid2.png" />
    <None Remove="Build\Resources\Textures\boidSpritesheet.png" />
    <None Remove="Build\Resources\Textures\EnvironmentTiles.png" />
    <None Remove="Build\Resources\Textures\mouseBorder.png" />
    <None Remove="Build\Resources\Textures\UserInterfaceTextures.png" />
    <None Remove="Core\Rendering\Renderers\Batching\Batch.disabled" />
    <None Remove="Core\Rendering\Renderers\Batching\BatchedSpriteRenderer.disabled" />
    <None Remove="Core\Rendering\Renderers\Batching\GlobalBatches.disabled" />
    <None Remove="Core\Rendering\Shaders\DefaultBatchTexture.glsl" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Core\Rendering\Renderers\Batching\Batch.disabled" />
    <Compile Include="Core\Rendering\Renderers\Batching\BatchedSpriteRenderer.disabled" />
    <Compile Include="Core\Rendering\Renderers\Batching\GlobalBatches.disabled" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Build\Resources\Audio\SFX\testsfx.mp3">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Shaders\FunShader.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\EnvironmentTiles.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\UserInterfaceTextures.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultBatchTexture.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultVertex.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultTexture.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.1.0" />
    <PackageReference Include="System.Drawing.Common" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Build\Resources\Textures\test.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Build\Resources\Textures\test2.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Build\Resources\Textures\Tiles\" />
  </ItemGroup>

</Project>
