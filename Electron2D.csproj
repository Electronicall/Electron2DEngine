<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Build\Resources\Textures\Tiles\**" />
    <Compile Remove="Core\Mapping\**" />
    <Compile Remove="Core\Physics\**" />
    <Compile Remove="Core\Rendering\Renderers\Batching\**" />
    <EmbeddedResource Remove="Build\Resources\Textures\Tiles\**" />
    <EmbeddedResource Remove="Core\Mapping\**" />
    <EmbeddedResource Remove="Core\Physics\**" />
    <EmbeddedResource Remove="Core\Rendering\Renderers\Batching\**" />
    <None Remove="Build\Resources\Textures\Tiles\**" />
    <None Remove="Core\Mapping\**" />
    <None Remove="Core\Physics\**" />
    <None Remove="Core\Rendering\Renderers\Batching\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Build\Resources\Audio\SFX\testsfx.mp3" />
    <None Remove="Build\Resources\BuildDate.txt" />
    <None Remove="Build\Resources\Fonts\NotoSans.ttf" />
    <None Remove="Build\Resources\Fonts\OpenSans.ttf" />
    <None Remove="Build\Resources\Shaders\FunShader.glsl" />
    <None Remove="Build\Resources\Shaders\LitShader.glsl" />
    <None Remove="Build\Resources\Textures\basicSpritesheet1.png" />
    <None Remove="Build\Resources\Textures\boid1.png" />
    <None Remove="Build\Resources\Textures\boid2.png" />
    <None Remove="Build\Resources\Textures\boidSpritesheet.png" />
    <None Remove="Build\Resources\Textures\brick.png" />
    <None Remove="Build\Resources\Textures\brickNormal.png" />
    <None Remove="Build\Resources\Textures\EnvironmentTiles.png" />
    <None Remove="Build\Resources\Textures\EnvironmentTilesNormal.png" />
    <None Remove="Build\Resources\Textures\mouseBorder.png" />
    <None Remove="Build\Resources\Textures\rubble.png" />
    <None Remove="Build\Resources\Textures\rubbleNormal.png" />
    <None Remove="Build\Resources\Textures\TestNormal.jpg" />
    <None Remove="Build\Resources\Textures\tiles1.png" />
    <None Remove="Build\Resources\Textures\tilesNormal1.png" />
    <None Remove="Build\Resources\Textures\UserInterfaceTextures.png" />
    <None Remove="Build\Resources\Textures\white_circle.png" />
    <None Remove="Core\Rendering\CoreTextures\BlankNormal.png" />
    <None Remove="Core\Rendering\CoreTextures\BlankTexture.png" />
    <None Remove="Core\Rendering\Shaders\DefaultInterface.glsl" />
    <None Remove="Core\Rendering\Shaders\DefaultText.glsl" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Build\Resources\Audio\SFX\testsfx.mp3">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\BuildDate.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Fonts\NotoSans.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Fonts\OpenSans.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\brick.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\brickNormal.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\EnvironmentTilesNormal.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\rubble.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\rubbleNormal.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\TestNormal.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\tiles1.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\tilesNormal1.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\white_circle.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\CoreTextures\BlankNormal.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\CoreTextures\BlankTexture.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultLit.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Shaders\FunShader.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\EnvironmentTiles.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Build\Resources\Textures\UserInterfaceTextures.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultText.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultInterface.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultVertex.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Core\Rendering\Shaders\DefaultTexture.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FreeTypeSharp" Version="1.1.3" />
    <PackageReference Include="NAudio" Version="2.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Drawing.Common" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Build\Resources\Textures\test.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Build\Resources\Textures\test2.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="echo %25date%25 %25time%25 &gt; &quot;$(ProjectDir)\Build\BuildDate.txt&quot;" />
  </Target>

</Project>
